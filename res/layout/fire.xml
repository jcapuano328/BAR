<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/layoutFireType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0">
        <TextView
            android:text="Type"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:id="@+id/lblFireType" />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="wrap_content"
            android:id="@+id/spinFireType" />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:id="@+id/layoutFireStrengthRange">
    
        <TextView
            android:text="SPs"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".15"
            android:layout_toLeftOf="@+id/spinFireStrength"
            android:id="@+id/lblFireStrength" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:layout_toRightOf="@+id/lblFireStrength"
            android:id="@+id/spinFireStrength" />
    
        <TextView
            android:text="Range"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:layout_height="wrap_content"
            android:id="@+id/lblFireTerrain" />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:layout_height="wrap_content"
            android:id="@+id/spinFireRange" />
        
    </LinearLayout>
        

    <LinearLayout
            android:id="@+id/layoutFireModifiers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ListView
                android:layout_width="fill_parent"
                android:layout_height="228dp"
                android:id="@+id/listFireModifiers"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFireDice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1.0" android:paddingBottom="5dp" android:paddingTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="0"
            android:gravity="center"
            android:background="@drawable/die10_white"
            android:id="@+id/imgFireDie1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="0"
            android:gravity="center"
            android:background="@drawable/die10_red"
            android:id="@+id/imgFireDie2"/>
        
        <Button
            android:id="@+id/btnFireDiceRoll"
            android:text="Roll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_alignTop="@+id/imgFireDie1"
            android:layout_toRightOf="@+id/imgFireDie2"
            android:background="@drawable/red_button"
            style="@style/button_text" />
    </LinearLayout>
    
    <LinearLayout
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:paddingTop="10dp"
        android:id="@+id/layoutFireResults">
        <TextView
            android:text="Results"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:id="@+id/lblFireResults"
            android:layout_gravity="center_vertical" />
        <TextView
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".80"
            android:layout_toRightOf="@+id/lblFireResults"
            android:id="@+id/txtFireResults"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>